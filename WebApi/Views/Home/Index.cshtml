
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/Jquary.js"></script>

<h2>Index</h2>
<input type="button" value="Get All Employees" id="btn1" />
<br />
<input type="text" placeholder="Enter the id" id="txt" />
<input type="button" value="Get Data by Id" id="btn3" />
<input type="button" value="clear" id="btn2" />

<br />
<div id="ShowData">

</div>

<script>
    $(document).ready(function () {

        $("#btn3").click(function () {

            var id = $("#txt").val();
            $.getJSON('/api/EmployeesData/'+id, function (respondataa) {

                var item = "<h2>" + respondataa + "</h2>";
                    $(item).appendTo("#ShowData")

               

            });
        });


        $("#btn2").click(function () {
            $("#ShowData").empty();
        });

        $("#btn1").click(function () {

            $.getJSON('/api/EmployeesData', function (respondata) {

                $.each(respondata, function (key, val) {

                    var item = "<h2>" + val + "</h2>";
                    $(item).appendTo("#ShowData")

                });

            });
        });
    });


</script>